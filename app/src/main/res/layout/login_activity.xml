<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_delivery_image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_trans"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_sign_up"
                style="@style/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_weight="0.01"
                android:text="הרשם" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/login" />

        <TextView
            android:id="@+id/textView"
            style="@style/text_V_style"
            android:text="ברוך הבא לjetpack" />

        <EditText
            android:id="@+id/edittext_email"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/ic_person"
            android:hint="דוא''ל"
            android:gravity="left|center_vertical"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edittext_pass"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/pass"
            android:hint="סיסמא"
            android:gravity="left|center_vertical"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/edittext_name"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/pen2"
            android:hint="    שם משתמש    "
            android:visibility="gone"
            android:gravity="left|center_vertical"
            android:inputType="text" />

        <Button
            android:id="@+id/button_sign_in"
            style="@style/buttonStyle"
            android:text="הכנס" />

        <TextView
            android:id="@+id/textView2"
            style="@style/text_second_style"
            android:text="Forgot Password?" />
    </LinearLayout>
</RelativeLayout>
